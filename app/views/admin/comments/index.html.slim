.row
  .col-md-9
    .panel.panel-campo
      .panel-heading.clearfix
        .pull-right
          = paginate @comments, theme: 'campo', placement: 'bottom'
        h2.panel-title Comments
      .panel-body
        .list-group.list-group-campo
          - @comments.each do |comment|
            a.list-group-item href=admin_comment_path(comment)
              .list-group-item-heading
                = comment.id
                = '. '
                b = truncate comment.body
              .text-muted
                = comment.user.name
                = ' Â· '
                = time_ago_in_words comment.created_at
      .panel-footer.clearfix
        .pull-right
          = paginate @comments, theme: 'campo'
  .col-md-3
    .panel.panel-campo
      .panel-body
        ul.nav.nav-pills.nav-stacked
          li class=('active' if action_name == 'index')
            a href=admin_comments_path Normal
          li class=('active' if action_name == 'trashed')
            a href=trashed_admin_comments_path Trashed
