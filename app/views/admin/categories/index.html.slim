.panel.panel-campo
  .panel-heading.clearfix
    .pull-right
      a.btn.btn-default href=new_admin_category_path New category
    h2.panel-title Categories
  .panel-body
    .table-responsive
      table.table
        thead
          tr
            th Name
            th Slug
            th Description
            th Topics count
        tbody
          - @categories.each do |category|
            tr
              td
                a href=admin_category_path(category)
                  = category.name
              td = category.slug
              td = truncate category.description
              td = category.topics_count
