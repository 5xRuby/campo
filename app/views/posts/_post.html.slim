li.list-group-item-campo id="post_#{post.id}" data-post-id=post.id data-creator-id=post.user_id
  .post
    img.avatar.img-rounded src="http://gravatar.com/avatar/5aec84cd0b5479a0d1d89b6ffa2a9a20.png?r=G&s=48"
    .metadata
      span.post-number
        | #
        = post.post_number
      span.author
        = post.user.name
      span.date
        = time_ago_in_words post.created_at
    article.text
      = format_post post.content
    .actions.clearfix
      .pull-right
        - if post.post_number == 1
          a.btn href=edit_topic_path(post.topic) data-visible-to="creator"
            i.fa.fa-edit
        - else
          a.btn href=edit_post_path(post) data-remote='true' data-visible-to="creator"
            i.fa.fa-edit
        a.btn.post-like href=like_post_path(post) data-remote='true' data-method="post"
          i.fa.fa-heart
          '
          span.count
            = post.like_users_count
        a.btn data-visible-to="user" data-post-reply-to="@#{post.user.username} ##{post.post_number}"
          i.fa.fa-reply
